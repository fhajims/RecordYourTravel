<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecordyourTravel.MainPage"
             BackgroundColor="{StaticResource darkolivegreen}">

    
    <StackLayout BackgroundColor="AntiqueWhite"
                 Margin="15"
                 VerticalOptions="Center">
        <Entry x:Name="emailEntry" Placeholder="Email"
               Keyboard="Email"
               TextColor="{StaticResource darkolivegreen}"
               Text="Email"/>
        <Entry x:Name="passwordEntry" Placeholder="Password"
               IsPassword="True"
               />
        <Button x:Name="loginButton" Text="Login"
               
                TextColor="Beige"
                Clicked="loginButton_Clicked"
                Style="{StaticResource normalButton}"
                
                />
    </StackLayout>

</ContentPage>
